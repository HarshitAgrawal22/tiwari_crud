<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="/styles.css">
        <title>Music Albums</title>
    </head>
    <body>
        <h1>Music Albums</h1>
        <a href="/music-album/new">Add New Album</a>
        <ul>
            <% albums.forEach(album => { %>
            <li>
                <a href="/music-album/<%= album._id %>"><%= album.musicTitle
                    %></a>
                <form action="/music-album/<%= album._id %>?_method=DELETE"
                    method="POST">
                    <button>Delete</button>
                </form>
            </li>
            <% }); %>
        </ul>
    </body>
</html>
